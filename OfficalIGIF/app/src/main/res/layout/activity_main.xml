<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c58e7e7e"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_float_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/igif" />

            <ImageView

                android:id="@+id/iv_updrop_float"
                android:layout_width="12dp"
                android:layout_height="6dp"
                android:scaleType="fitEnd"
                android:src="@drawable/updroparrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_float_download"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/background_round"
                android:padding="15dp"
                android:src="@drawable/ic_file_download_black_24dp" />

            <ImageView
                android:id="@+id/iv_updrop_download"
                android:layout_width="12dp"
                android:layout_height="6dp"
                android:scaleType="fitEnd"
                android:src="@drawable/updroparrow"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_float_home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/background_round"
                android:padding="15dp"
                android:src="@drawable/ic_home_white_24dp" />

            <ImageView
                android:id="@+id/iv_updrop_home"
                android:layout_width="12dp"
                android:layout_height="6dp"
                android:scaleType="fitEnd"
                android:src="@drawable/updroparrow"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_float_favorite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/background_round"
                android:padding="15dp"
                android:src="@drawable/ic_favorite_white_24dp" />

            <ImageView
                android:id="@+id/iv_updrop_favorite"
                android:layout_width="12dp"
                android:layout_height="6dp"
                android:scaleType="fitEnd"
                android:src="@drawable/updroparrow"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/background_white_subround_concern"
       android:elevation="2dp" />

    <android.support.constraint.ConstraintLayout
        android:elevation="2dp"
        android:id="@+id/cl_main_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="#fff"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Press Back to exit"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


</LinearLayout>